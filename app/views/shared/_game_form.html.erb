<%= form_for(@game) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :team1 %>
    <%= f.text_field :team_1 %>
    <%= f.label :score1 %>
    <%= f.text_field :score_1, placeholder: 0 %>
    <%= f.label :team2 %>
    <%= f.text_field :team_1 %>
    <%= f.label :score2 %>
    <%= f.text_field :score_2, placeholder: 0 %>
    <%= f.text_area :description, placeholder: "Compose new game..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>