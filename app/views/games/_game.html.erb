<li id="game-<%= game.id %>">
  <%= link_to gravatar_for(game.user, size: 50), game.user %>
  <span class="user"><%= link_to game.user.name, game.user %></span>
  <span class="game"><%= game.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(game.created_at) %> ago.
  </span>
</li>